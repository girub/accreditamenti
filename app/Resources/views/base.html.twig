<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
        <link rel="stylesheet" type="text/css" href="{{ asset('bundles/ruiantwitterbootstrap/css/bootstrapv2.css') }}">
   
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js" type="text/javascript"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.18/jquery-ui.min.js" type="text/javascript"></script>


        <script>
            $(document).ready(function(){
                console.log('qwertyuiop');
            });
        </script>


    </head>
    <body>







<div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="/">Admin</a>
          

           <div class="btn-group pull-right">
            


     {% if app.user %}
            <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
              <i class="icon-user"></i> {{ app.user }}
              <span class="caret"></span>
            </a>
    {% else %}
            <a class="btn dropdown-toggle" href="{{ path('fos_user_security_login') }}">
              <i class="icon-user"></i> Login
             
            </a>
    {% endif %}



            <ul class="dropdown-menu">
              <li><a href="#">Profile</a></li>
              <li class="divider"></li>
              <li><a href="{{ path('fos_user_security_logout') }}">Sign Out</a></li>
            </ul>
          </div>


          <div class="nav-collapse">
            <ul class="nav">
               {% block menu %}{% endblock %}
                        {% if app.user %}
                            <li>
                                <a href="{{ path('congresso_new') }}" id="link-crea-nuovo-congresso">
                                    <span class="icon-plus icon-white"></span>nuovo congresso!
                                </a>
                            </li>
                            <li>
                                <a href="{{ path('congresso') }}">Congressi</a>
                            </li>

                            <li>
                                <a href="{{ path('accreditamento') }}">Accreditamenti</a>
                            </li>
                          
                     
                        {% endif %}
            </ul>
          </div>
            <!--/.nav-collapse -->
        </div>
      </div>
    </div>















        <div class="container">
            {% if app.session.hasFlash('notice') %}
                <div class="alert">
                    <button class="close" data-dismiss="alert">Ã—</button>
                    {{ app.session.flash('notice') }}
                </div>
            {% endif %}
        </div>

<br>><br><br>

        <div class="container">
            <div class="container-fluid">
                <div class="row-fluid">
                    <div class="span2">
                        {% block sidebar %}
                            <h3>Sidebar</h3>
                            <div class="well">
                                Ciao mondo!
                            </div>
                        {% endblock %}
                    </div>
                    <div class="span10">
                        {% block body %}{% endblock %}
                    </div>
                </div>
            </div>
        </div>


  





        {% block javascripts %}{% endblock %}

        <!-- Some code -->
        <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
        <script type="text/javascript" src="{{ asset('bundles/ruiantwitterbootstrap/js/bootstrapv2.js') }}"></script>

    </body>
</html>
