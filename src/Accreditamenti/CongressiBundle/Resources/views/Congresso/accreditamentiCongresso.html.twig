{% extends '::backEnd/base.html.twig' %}

{% block body %}

    <br><br>
    <table class="table table-striped table-bordered table-condensed">
        <tbody>
            <tr>
                <td style="width:200px;"><img src="/resource/img/{{ entity.id }}/{{ entity.manifesto }}" width="200" style="border:1px solid #333333;"></td>
                <td style="padding:13px;"><h2>{{ entity.titolo }}</h2>
                Luogo <b> {{ entity.luogo }}</b><br>
                Dal <b>{{ entity.datainizio|date('d/m/Y') }}</b>  al <b>{{ entity.datafine|date('d/m/Y') }}</b>
                
                </td>
            </tr>
                    
        </tbody>
    </table>
    
    
    {% if accreditamenti|length > 0 %}
        
        <table class="table table-striped table-bordered table-condensed">
            <thead>
                <tr>
                    <th><h3>Seleziona l'accreditamento ed  inizia il questionario Ecm</h3></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        {% for accreditamento in accreditamenti %}
                            <div><a href="{{ path('form_login_iscritto', {'id': accreditamento.id}) }}" id="link_accesso_accreditamento" >{{ accreditamento.titolo }}</a></div>
                        {% endfor %}
                    </td>
                </tr>
            </tbody>
        </table>
    {% endif %}
        
    

{% endblock %}