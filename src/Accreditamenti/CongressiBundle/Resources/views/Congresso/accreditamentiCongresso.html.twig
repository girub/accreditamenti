{% extends '::base.html.twig' %}

{% block body %}

    <h1>Congresso</h1>

    <table class="table table-striped table-bordered table-condensed">
        <tbody>
         
            <tr>
                <th>Codice_congresso</th>
                <td>{{ entity.codicecongresso }}</td>
            </tr>
          
            <tr>
                <th>Titolo</th>
                <td>{{ entity.titolo }}</td>
            </tr>
            <tr>
                <th>Descrizione</th>
                <td>{{ entity.descrizione }}</td>
            </tr>
            <tr>
                <th>Data_inizio</th>
                <td>{{ entity.datainizio|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Data_fine</th>
                <td>{{ entity.datafine|date('Y-m-d H:i:s') }}</td>
            </tr>
            
        </tbody>
    </table>
    
    
    {% if accreditamenti|length > 0 %}
        <h1>Accreditamento</h1>
    
        <table class="table table-striped table-bordered table-condensed">
            <thead>
                <tr>
                    <th>Titolo accreditamento</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        {% for accreditamento in accreditamenti %}
                            <div><a href="{{ path('form_login_iscritto', {'id': accreditamento.id}) }}" id="link_accesso_accreditamento{{accreditamento.id}}" >{{ accreditamento.titolo }}</a></div>
                        {% endfor %}
                    </td>
                </tr>
            </tbody>
        </table>
    {% endif %}
        
    

{% endblock %}