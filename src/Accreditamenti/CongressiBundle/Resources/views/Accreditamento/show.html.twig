{% extends '::base.html.twig' %}



{% block body %}

    <div class="navbar">
        <div class="navbar-inner">
            <div class="container">
                <ul class="nav">
                    <li>
                        <a href="{{ path('accreditamento') }}">
                            <span class="icon-backward icon-white"></span> Back to the list
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('accreditamento_edit', { 'id': entity.id }) }}">
                            <span class="icon-edit icon-white"></span> Edit
                        </a>
                    </li>
                    <li>
                    <a href="{{ path('accreditamento_new', { 'congresso_id': entity.id }) }}">
                              <span class="icon-plus-sign icon-white"></span>   Crea accreditamento
                            </a>

                    </li>


                    <li>
                        <a href="#" id="cancella_congresso" data-toggle="modal" href="#myModal">
                            <span class="icon-trash icon-white"></span> Cancella
                        </a>
                    </li>
                    <li>
                        <a data-toggle="modal" href="#myModal"> <span class="icon-trash icon-white"></span> Cancella strano</a>

                    </li>
                </ul>
            </div>
        </div>
    </div>
    


<h1>Accreditamento</h1>

<table class="table table-striped table-bordered table-condensed">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Numero_accreditamento</th>
            <td>{{ entity.numeroaccreditamento }}</td>
        </tr>
        <tr>
            <th>Titolo</th>
            <td>{{ entity.titolo }}</td>
        </tr>
        <tr>
            <th>Luogo</th>
            <td>{{ entity.luogo }}</td>
        </tr>
        <tr>
            <th>Data_inizio</th>
            <td>{{ entity.datainizio|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Data_fine</th>
            <td>{{ entity.datafine|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Ore_formative</th>
            <td>{{ entity.oreformative }}</td>
        </tr>
        <tr>
            <th>Obiettivo_formativo</th>
            <td>{{ entity.obiettivoformativo }}</td>
        </tr>
        <tr>
            <th>Numero_crediti</th>
            <td>{{ entity.numerocrediti }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('accreditamento') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('accreditamento_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
  
</ul>




<div class="modal hide" id="myModal">


  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">Ã—</button>
    <h3>Attenzione stai eliminando un accreditamento</h3>
  </div>

  <div class="modal-footer">
    <a href="#" class="btn" data-dismiss="modal">Annulla</a>


    <form action="{{ path('accreditamento_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit" class="btn btn-primary">Elimina</button>

        </form>
  </div>
</div>




{% endblock %}